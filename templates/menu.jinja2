	<div class="stellarnav">
		<ul>
			{% for menus in menu %}
			<li>

                				<a href="{{ menus.link }}" class="gn-icon gn-icon-help">{{menus.titolo}}</a>

								<ul class="dl-submenu">
									{% for submenus in submenu %}
									<li >
												{% if menus.codice == submenus.radice %}
                        					<a href="{{submenus.link}}" ><span></span> {{submenus.titolo}}</a>
											{% endif %}
									</li>
									{% endfor %}
								</ul>
							</li>
			{% endfor%}

		</ul>
	</div>

	<script type="text/javascript" src="{{request.static_url('carlo:static/stellarnav/js/stellarnav.min.js')}}"></script>
